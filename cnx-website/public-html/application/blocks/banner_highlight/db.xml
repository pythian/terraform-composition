<?xml version="1.0"?>
<schema version="0.3">

    <table name="btBannerHighlight">

        <field name="bID" type="I">
            <key/>
            <unsigned/>
        </field>

        <field name="settings" type="X2"></field>

    </table>

    <table name="btBannerHighlightEntries">

        <field name="id" type="I">
            <autoincrement/>
            <unsigned/>
            <key/>
        </field>

        <field name="bID" type="I">
            <default value="0"/>
            <unsigned/>
        </field>

        <field name="position" type="I">
            <default value="0"/>
            <unsigned/>
        </field>

        <field name="image" type="I">
            <default value="0"/>
            <unsigned/>
        </field>
        <field name="image_alt" type="C" size="255"></field>
        <field name="image_data" type="X2"></field>

        <field name="title" type="C" size="255"></field>

        <field name="content" type="X2"></field>

        <field name="link" type="X2"></field>

    </table>

</schema>
