<?xml version="1.0"?>
<schema version="0.3">

    <table name="btStepHighlight">

        <field name="bID" type="I">
            <key/>
            <unsigned/>
        </field>

        <field name="title" type="C" size="255"></field>

        <field name="content" type="X2"></field>

    </table>

    <table name="btStepHighlightEntries">

        <field name="id" type="I">
            <autoincrement/>
            <unsigned/>
            <key/>
        </field>

        <field name="bID" type="I">
            <default value="0"/>
            <unsigned/>
        </field>

        <field name="position" type="I">
            <default value="0"/>
            <unsigned/>
        </field>

        <field name="title" type="C" size="255"></field>

        <field name="description" type="X2"></field>

    </table>

</schema>
